pipeline {
    agent any
    
    environment {
        IMAGE_NAME = 'food-delivery'
        COMPOSE_FILE = 'docker-compose.yml'
    }
    
    stages {
        stage('üîç Checkout') {
            steps {
                checkout scm
                script {
                    env.GIT_COMMIT_SHORT = sh(
                        script: "git rev-parse --short HEAD",
                        returnStdout: true
                    ).trim()
                }
            }
        }
        
        stage('üì¶ Install Dependencies') {
            parallel {
                stage('Backend') {
                    steps {
                        dir('backend') {
                            sh 'npm ci --no-audit'
                        }
                    }
                }
                stage('Frontend') {
                    steps {
                        dir('frontend') {
                            sh 'npm ci --no-audit'
                        }
                    }
                }
            }
        }
        
        stage('üß™ Tests') {
            steps {
                dir('backend') {
                    sh 'npm test || echo "No backend tests"'
                }
                dir('frontend') {
                    sh 'npm test || echo "No frontend tests"'
                }
            }
        }
        
        stage('üê≥ Build & Deploy') {
            steps {
                sh '''
                    echo "Building and deploying with Docker Compose..."
                    docker-compose down || true
                    docker-compose build --no-cache
                    docker-compose up -d
                    
                    echo "Waiting for services to start..."
                    sleep 30
                    
                    echo "Services status:"
                    docker-compose ps
                '''
            }
        }
        
        stage('‚úÖ Verify Deployment') {
            steps {
                sh '''
                    echo "Verifying services..."
                    
                    # Check backend
                    echo "Backend health:"
                    curl -f http://localhost:4000/health || echo "Backend not ready"
                    
                    # Check frontend
                    echo "Frontend:"
                    curl -I http://localhost:80 || echo "Frontend not ready"
                    
                    # Check SonarQube
                    echo "SonarQube:"
                    curl -f http://localhost:9000 || echo "SonarQube not ready"
                    
                    echo "‚úÖ All services deployed!"
                '''
            }
        }
        
        stage('üîí Security Scan') {
            steps {
                sh '''
                    echo "Installing Trivy..."
                    curl -sfL https://raw.githubusercontent.com/aquasecurity/trivy/main/contrib/install.sh | sh -s -- -b /usr/local/bin
                    
                    echo "Scanning backend image..."
                    trivy image --severity HIGH,CRITICAL food-delivery-backend:latest || true
                    
                    echo "Scanning frontend image..."
                    trivy image --severity HIGH,CRITICAL food-delivery-frontend:latest || true
                '''
            }
        }
        
        stage('üìä SAST - SonarQube Scan') {
            steps {
                sh '''
                    echo "Waiting for SonarQube to be ready..."
                    sleep 60
                    
                    echo "Running SonarQube scan..."
                    sonar-scanner \
                      -Dsonar.projectKey=food-delivery \
                      -Dsonar.sources=backend,frontend/src \
                      -Dsonar.exclusions=**/node_modules/** \
                      -Dsonar.host.url=http://sonarqube:9000 \
                      -Dsonar.login=admin \
                      -Dsonar.password=admin
                '''
            }
        }
    }
    
    post {
        always {
            echo "=== PIPELINE COMPLETED ==="
            cleanWs()
        }
        success {
            echo "üéâüéâüéâ PIPELINE SUCCESSFUL! üéâüéâüéâ"
            echo "Access services:"
            echo "- Frontend: http://localhost:80"
            echo "- Backend: http://localhost:4000"
            echo "- SonarQube: http://localhost:9000 (admin/admin)"
            echo "- Jenkins: http://localhost:8081"
            echo "- Grafana: http://localhost:3001 (admin/admin)"
        }
    }
}